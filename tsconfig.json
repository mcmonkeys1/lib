{
  "compilerOptions": {
    "strict": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "es2015",
    "module": "es2015",
    "lib": ["es2015"],
    "paths": {
      "@queries/*": ["queries/*"],
      "@utils/*": ["utils/*"],
    }
  }
}
